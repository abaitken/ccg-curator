<Window x:Class="CCGCurator.ReferenceBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CCGCurator.ReferenceBuilder"
        mc:Ignorable="d"        
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Row 0 -->
        <!--<TextBox IsReadOnly="true" VerticalScrollBarVisibility="Visible" />-->
        <ProgressBar Value="{Binding ProgressValue}" Maximum="{Binding MaximumValue}" />

        <!-- Row 1 -->
        <Button Content="Collect Data" Click="CollectData_Click" Grid.Row="1" IsEnabled="{Binding CanCollectData}" />

        <!-- Row 2 -->
        <Label Content="{Binding StatusText}" Grid.Row="2" />
    </Grid>
</Window>
