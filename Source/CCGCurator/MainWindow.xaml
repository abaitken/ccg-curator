<Window x:Class="CCGCurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CCGCurator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- ROW 0 -->
        <ComboBox ItemsSource="{Binding ImageFeeds}" DockPanel.Dock="Top" SelectedItem="{Binding SelectedImageFeed}" Grid.Row="0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        
        <!-- ROW 1 -->
        <UniformGrid Grid.Row="1" Columns="2">
            <local:PictureBoxHost x:Name="previewBox" DockPanel.Dock="Left" />
            <local:PictureBoxHost x:Name="filteredBox" DockPanel.Dock="Right"/>
        </UniformGrid>

        <!-- ROW 2 -->
        <StackPanel DataContext="{Binding DetectedCard}" Grid.Row="2">
            <TextBlock Text="{Binding Name}" />
        </StackPanel>      
    </Grid>
</Window>
